	    	id: copypass
	    	size_hint:(None,None)
	    	size:(30,30)
	    	background_normal: 'UI/clipboard.png'
	    	background_down: 'UI/clipboarddown.png'
	    	pos_hint:{'center_x':0.675,'center_y':0.47}
	    	on_release:root.copytoclip()
	    Button:
	    	id: passwsend
	    	text:"Copy to Password textbox"
	    	text_size:(180,None)
	    	color:(0.7,0.7,0.7,1)
	    	font_size:12
	    	halign:'center'
	    	size_hint:(None,None)
	    	size:(180,30)
	    	background_normal: 'UI/Mainbutton.png'
	    	background_down: 'UI/Mainbuttondown.png'
	    	pos_hint:{'center_x':0.830,'center_y':0.47}
	    	on_release:root.sendgenpass()
		TextInput:
			id: n
			foreground_color:(0.7,0.7,0.7,1)
			color:(0.7,0.7,0.7)
			cursor_color:(0,171/255,174/255,1)
			background_color:(45/255,45/255,45/255,1)
			hint_text: 'Password\nSize'
			font_size:13.5
			multiline: False
			pos_hint: {'center_x': 0.705,'center_y': 0.65}
			size_hint: (0.10, 0.08)
			write_tab: False
                                                                    	#Side Bar
		Button: 
			text: 'Log Out'
			font_size:14
			pos_hint: {'x': 0 ,'y': 0 }
			size_hint: (None, None)
			size: (150,96)
			background_normal: 'UI/Main Window Button.png'
			background_down: 'UI/Main Window Button Ondown.png'
			on_release:
				app.root.transition=FadeTransition(duration=1.2)
				app.root.current='Login'
				root.clear()
		Button: 
			text: 'Help'
			font_size:14
			pos_hint: {'x': 0 ,'y': 0.16 }
			size_hint: (None, None)
			size: (150,96)
			background_normal: 'UI/Main Window Button.png'
			background_down: 'UI/Main Window Button Ondown.png'
		Button:
			text: 'Import\nShared Passwords'
			font_size:14
			halign:'center'
			pos_hint: {'x': 0 ,'y': 0.32 }
			size_hint: (None, None)
			size: (150,96)
			background_normal: 'UI/Main Window Button.png'
			background_down: 'UI/Main Window Button Ondown.png'
			on_release: root.Import_Passwords()
		Button:
			text: 'Share Passwords'
			font_size:14
			pos_hint: {'x': 0 ,'y': 0.48 }
			size_hint: (None, None)
			size: (150,96)
			background_normal: 'UI/Main Window Button.png'
			background_down: 'UI/Main Window Button Ondown.png'
			on_release: root.Export_Passwords()
		Button: 
			text: 'View Passwords'
			font_size:14
			pos_hint: {'x': 0 ,'y': 0.64 }
			size_hint: (None, None)
			size: (150,96)
			background_normal: 'UI/firstbutton.png'
			background_down: 'UI/firstbuttondown.png'
			on_release:
				app.root.transition=FadeTransition(duration=0)
				app.root.current='PassDisp'
				root.refresh()

