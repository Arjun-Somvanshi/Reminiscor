			size_hint: (None, None)
			size: (150,120)
			background_normal: 'Main Window Button.png'
			background_down: 'Main Window Button Ondown.png'
			on_release: root.Export_Passwords()
		Button: 
			text: 'View Passwords'
			pos_hint: {'x': 0 ,'top': 1 }
			size_hint: (None, None)
			size: (150,120)
			background_normal: 'Main Window Button.png'
			background_down: 'Main Window Button Ondown.png'
			on_release:
				app.root.current='PassDisp'
				root.manager.transition.direction= "left"
				root.screen3()

