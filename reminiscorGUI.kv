			text: 'Clear'
			color:(0.7,0.7,0.7,1)
			font_size:12.5
			pos_hint: {'center_x': 0.9 ,'center_y': 0.635 }
			size_hint: (0.05, 0.04)
			background_normal: 'UI/Mainbutton.png'
	    	background_down: 'UI/Mainbuttondown.png'
			on_release:
				root.clear()
