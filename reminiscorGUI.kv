#----------------------------------------------------------------------Login WINDOW------------------------------------------------------------------------------------------------------
<LoginWindow>:
	username:username
	p:p
	errortext:errortext
	user_check:user_check
	name: 'Login'
	canvas:
	    Color:
	        rgba:30/255,30/255, 30/255, 1
		Rectangle: 
	        size: self.size
	        pos: self.pos
	FloatLayout:
		Image:
			source:'UI/Login Background.png'
			size_hint: (None,None)
			size:(800,600)
			pos_hint:{'x':0,'y':0}
		Label:
			id:errortext 
			font_size: 13.5
			markup:True
			text: ''
			text_size:(self.width,None)
			pos_hint: {'center_x': 0.51,'center_y': 0.59}
			width:300
			size_hint: (None, .1)
		TextInput:
			id:username 
			hint_text: 'Username'
			foreground_color:(0.7,0.7,0.7,1)
			color:(0.7,0.7,0.7)
			cursor_color:(0,171/255,174/255,1)
			background_color:(45/255,45/255,45/255,1)
			multiline: False
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: (0.20, 0.06)
			write_tab: False
		TextInput:
			id: p
			hint_text: 'Master Password' 
			foreground_color:(0.7,0.7,0.7,1)
			password: True
			cursor_color:(0,171/255,174/255,1)
			background_color:(45/255,45/255,45/255,1)
			multiline: False
			pos_hint: {'center_x': 0.5, 'center_y': 0.4}
			size_hint: (0.20, 0.06)
			write_tab:False
		Button:
			text: 'Log in'
			color: (0.5, 0.5, 0.5, 1)
			pos_hint: {'center_x': 0.5 ,'center_y': 0.3 }
			size_hint: (0.20, 0.06)
			background_normal: 'UI/button for login.png'
			background_down: 'UI/on down login.png'
			on_release:
				app.root.transition=FadeTransition(duration=1.2)
				app.root.current='Main' if root.Login_Authenticate() else 'Login'
		Button:
			id: help1
			color: (0.5, 0.5, 0.5, 1)
			pos_hint: {'right': 0.98 ,'y': 0.015 }
			size_hint: (32/800, 32/600)
			background_normal: 'UI/help.png'
			background_down: 'UI/helpdown.png'
			on_release:
				root.help1()
		Button:
			id: info 
			color: (0.5, 0.5, 0.5, 1)
			pos_hint: {'right': 0.93 ,'y': 0.015 }
			size_hint: (32/800, 32/600)
			background_normal: 'UI/info.png'
			background_down: 'UI/infodown.png'
			on_release:
				root.welcome_screen1()
		Button:
			text: 'Sign-Up'
			color: (0.5, 0.5, 0.5, 1)
			background_normal: 'UI/button for login.png'
			background_down: 'UI/on down login.png'
			pos_hint: {'center_x': 0.5 ,'center_y': 0.2 }
			size_hint: (0.20, 0.06)
			on_release:
				root.signup_check()
		Label:
			id:user_check
			text: ''
			pos_hint: {'center_x': 0.5,'center_y': 0.8}
			size_hint: (.1, .1)
			color:[1,0,0,1]

