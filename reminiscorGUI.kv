<SignUp_Pop>:
	user:user
	p1:p1
	p2:p2
	signup:signup
	Label:
		markup: True
		text: 'This is the Sign-Up page. A user [color=#e8c209]doesn\'t[/color] exist!\nPlease remember your [color=#e8c209]Master Password[/color] and [color=#e8c209]Username[/color]'
		font_size: 15
		size_hint: (.1, .1)
		pos_hint: {'center_x': 0.5,'top': 1 }	
	TextInput: 
		id: user
		hint_text: 'Username'
		multiline: False
		pos_hint: {'center_x': 0.3, 'top': 0.8}
		size_hint: (0.50, 0.09)
	TextInput:
		id: p1
		hint_text: 'Master Password' 
		multiline: False
		pos_hint: {'center_x': 0.3, 'top': 0.6}
		size_hint: (0.50, 0.09)
	TextInput:
		id: p2
		hint_text: 'Confirm Master Password' 
		multiline: False
		pos_hint: {'center_x': 0.3, 'top': 0.4}
		size_hint: (0.50, 0.09)
	Button:
		id:signup
		text:'Sign-Up!'
		pos_hint: {'center_x': 0.8, 'center_y': 0.1}
		size_hint: (0.3, 0.1)
		on_release:
			root.check()
	Button:
		id:close
		text:'Back to Login Screen'
		font_size: 14
		text_size: (self.width, None)
		halign: 'center'
		pos_hint: {'center_x': 0.2, 'center_y': 0.1}
		size_hint: (0.3, 0.1)
		on_release:
			on_release: app.root.get_screen('Login').close()

<LoginWindow>:
	username:username
	p:p
	errortext:errortext
	user_check:user_check
	name: 'Login'
	canvas:
	    Color:
	        rgba:30/255,30/255, 30/255, 1
	    Rectangle: 
	        size: self.size
	        pos: self.pos
	FloatLayout:
		Label:
			id:errortext 
			text: ''
			pos_hint: {'center_x': 0.5,'center_y': 0.9}
			size_hint: (.1, .1)
		TextInput:
			id:username 
			hint_text: 'Username'
			foreground_color:(0.7,0.7,0.7,1)
			color:(0.7,0.7,0.7)
			cursor_color:(0,171/255,174/255,1)
			background_color:(45/255,45/255,45/255,1)
			multiline: False
			pos_hint: {'center_x': 0.5, 'center_y': 0.6}
			size_hint: (0.20, 0.06)
		TextInput:
			id: p
			hint_text: 'Master Password' 
			foreground_color:(0.7,0.7,0.7,1)
			password: True
			cursor_color:(0,171/255,174/255,1)
			background_color:(45/255,45/255,45/255,1)
			multiline: False
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: (0.20, 0.06)
		Button:
			text: 'Submit'
			color: (0.5, 0.5, 0.5, 1)
			pos_hint: {'center_x': 0.5 ,'center_y': 0.35 }
			size_hint: (0.20, 0.06)
			background_normal: 'button for login.png'
			background_down: 'on down login.png'
			on_release:
				app.root.current='Main' if root.Login_Authenticate() else 'Login'
				root.manager.transition.direction= "left"
		Button:
			text: 'Sign-Up'
			color: (0.5, 0.5, 0.5, 1)
			background_normal: 'button for login.png'
			background_down: 'on down login.png'
			pos_hint: {'center_x': 0.5 ,'center_y': 0.2 }
			size_hint: (0.20, 0.06)
			on_release:
				root.signup_check()
		Label:
			id:user_check
			text: ''
			pos_hint: {'center_x': 0.5,'center_y': 0.8}
			size_hint: (.1, .1)
			color:[1,0,0,1]

